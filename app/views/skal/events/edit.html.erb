<h2 class="ui header">
  <i class="write icon"></i>
  編集：<%= @event.title %>
</h2>

<div class="ui breadcrumb">
  <%= link_to raw('<i class="home icon"></i>'), skal_root_path(), class: 'section' %>
  <i class="right chevron icon divider"></i>
  <%= link_to raw("イベント一覧"), events_path(), class: 'section' %>
  <i class="right chevron icon divider"></i>
  <div class="section"><%= @event.title %></div>
</div>

<%= simple_form_for(@event, url: event_path(@event)) do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
<% end %>